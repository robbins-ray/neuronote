<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">

    <ImageView
        android:id="@+id/button_emoji"
        android:layout_width="318dp"
        android:layout_height="274dp"
        android:clickable="true"
        android:contentDescription="@android:string/untitled"
        android:drawingCacheQuality="high"
        android:onClick="@string/fragment_emoji_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_emoji"
        tools:srcCompat="@drawable/default_emoji" />

    <ImageView
        android:id="@+id/painPlane"
        android:layout_width="390dp"
        android:layout_height="158dp"
        android:contentDescription="@string/pain_plane_drawable"
        android:src="@drawable/pain_plane___scale_only"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_emoji" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="330dp"
        android:layout_height="168dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="28dp"
        android:text="@string/JournalTV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/painPlane" />
</androidx.constraintlayout.widget.ConstraintLayout>