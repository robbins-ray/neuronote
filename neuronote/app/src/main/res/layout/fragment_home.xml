<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">

    <ImageView
        android:id="@+id/button_emoji"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:clickable="true"
        android:contentDescription="@android:string/autofill"
        android:drawingCacheQuality="auto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_emoji"
        android:focusable="true"/>

    <ImageView
        android:id="@+id/painPlane"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/pain_plane_drawable"
        android:src="@drawable/pain_plane___scale_only"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_emoji" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="271dp"
        android:layout_marginTop="32dp"
        android:text="@string/JournalTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/painPlane" />
</androidx.constraintlayout.widget.ConstraintLayout>