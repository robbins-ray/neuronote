<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/notifications_header">

        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_notifications"
            android:title="@string/notifications" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/notifications_settings_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/notify_weekly" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_notify_daily"
            android:title="@string/notify_daily" />

    </PreferenceCategory>

</PreferenceScreen>